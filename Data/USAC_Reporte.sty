% -----------------------------------------------------------------------
% Nuevos comandos
% -----------------------------------------------------------------------
\newcommand{\Titulo}[2] % Ensamble de titulo
{
	\vspace*{5 mm}
	\begin{center}
	\begin{large}
	#1
	\end{large}\\
	\vspace*{2 mm}
	\begin{LARGE}
	\textbf{#2}
	\end{LARGE}
	\end{center}
	\vspace*{7 mm}
}

\newcommand{\Encabezado}[4] % Ensamble del encabezado
{
	\lhead{\begin{scriptsize}#1\end{scriptsize} \vspace*{-4 mm} }
	\rhead{\begin{scriptsize}#2\end{scriptsize} \vspace*{-4 mm} }
	\lfoot{\begin{footnotesize}#3\end{footnotesize}}
	\rfoot{\begin{footnotesize}#4\end{footnotesize}}
}

\newcounter{Contadorgraf} % Contador del comando Graficas
\setcounter{Contadorgraf}{0}

\newcommand{\Graficas}[3] % Colocador de graficas
{
	\stepcounter{Contadorgraf}
	\begin{figure}[H]
	\begin{flushleft}
	\footnotesize \textbf{Gr\'afica \arabic{Contadorgraf}:} \textit{#2}	
	\includegraphics[width=\columnwidth]{#1}
	\end{flushleft}
	\vspace*{-1cm}
	\end{figure}
}

\newcounter{Contadortabla} % Contador del comando Tablas
\setcounter{Contadortabla}{0}

\newenvironment{Tablas}[3] % Coloca y ensambla tablas
{
	\par \noindent \stepcounter{Contadortabla} {\flushleft \scriptsize \bf Tabla \arabic{Contadortabla}:} \textit{#1} \small \begin{center} \begin{tabular}{|*{#2}{#3}} 
}
{
	\end{tabular} \end{center}
}

\newenvironment{Resumen} % Ambiente para el resumen
{
	\begin{list}{}
	{
		\setlength{\topsep}{0pt}%
		\setlength{\leftmargin}{1 cm}%
		\setlength{\rightmargin}{1 cm}%
		\setlength{\parsep}{\parskip}%
	}
	\item
}
{
	\end{list}
	\vspace*{5 mm}
}
